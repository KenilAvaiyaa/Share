<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-zinc-800 text-white px-4">
        <h1 class="text-xl uppercase py-4 block">Creat a new post</h1>
        <hr class="opacity-10">
        <form class="flex flex-col" action="createpost" method="post" enctype="multipart/form-data">
            <input class=" block w-2/4 px-2 py-3 mt-2" type="file" name="postimage">
            <input class="text-black block w-2/4 px-2 py-3 mt-2" type="text" placeholder="Title" name="title">
            <textarea class="text-black block w-2/4 px-2 py-3 mt-2" type="" placeholder="Information" name="postinfo"></textarea>
            <input class="block w-1/12 px-2 py-3 mt-2 bg-emerald-400 rounded-full text-white" type="submit" value="Creat Post">
        </form>
    </div>
